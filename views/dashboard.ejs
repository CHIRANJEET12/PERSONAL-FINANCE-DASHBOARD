<script>
    document.addEventListener('DOMContentLoaded', function () {
         var addButton = document.getElementById('add-expense');
        var goalButton = document.getElementById('add-goal');

    addButton.addEventListener('click', function () {
    var container = document.getElementById('expensesContainer');
     var noCards = document.getElementById('no-cards-msg');

        if (noCards) {
                        noCards.remove();
        }

                    var card = createExpenseCard();
                    container.appendChild(card);
                    card.querySelector('input').focus();
                });

                goalButton.addEventListener('click', function () {
                    var container = document.getElementById('goal-items');
                    var nogoalCards = document.getElementById('no-goal-cards-msg');

                    if (nogoalCards) {
                        nogoalCards.remove();
                    }

                    var card = createGoalCard();
                    container.appendChild(card);
                    card.querySelector('input[type="number"]').focus();
                });

                loadCards();
            });

                function createExpenseCard(data = {}) {
                    var card = document.createElement('li');
                    card.className = 'expenseCard';
                    var date = data.date || new Date().toISOString().split('T')[0];
                    var time = data.time || new Date().toLocaleTimeString();
                    var expense = data.expense || '';
                    var id = data.id || Date.now();

                    card.setAttribute('id', `expenseCard_${id}`);

                    card.innerHTML = `
                    
                        <div class="redIcon"></div>
                        <input id="expense-input" type="text" placeholder="Enter expense" value="${expense}" autofocus autocomplete="off"/>
                        <p>Date: ${date}</p>
                        <p>Time: ${time}</p>
                        <span class="material-symbols-outlined bin" onclick="deleteExpenseCard(${id})">delete</span>
                    `;

                    var expenseInput = card.querySelector('#expense-input');
                    expenseInput.addEventListener('blur', function () {
                        const cardData = {
                            id: id,
                            expense: expenseInput.value,
                            date: date,
                            time: time
                        };
                        localStorage.setItem(`expenseCard_${id}`, JSON.stringify(cardData));
                    });

                    return card;
                }

                function createGoalCard(data = {}) {
                    var card = document.createElement('li');
                    card.className = 'goalCard';
                    var date = data.date || new Date().toISOString().split('T')[0];
                    var budget = data.budget || 0;
                    var savings = data.savings || 0;
                    var progress = data.progress || 0;
                    var id = data.id || Date.now();

                    card.setAttribute('id', `goalCard_${id}`);

                    card.innerHTML = `
                        <input type="number" id="userBudget" placeholder="Enter Budget" value="${budget}">
                        <input type="number" id="userSavings" placeholder="Enter Savings" value="${savings}">
                        <p class="goal-date">Date: ${date}</p>
                        <span class="material-symbols-outlined bin2" onclick="deleteGoalCard(${id})">delete</span>
                    `;

                    var budgetInput = card.querySelector('#userBudget');
                    var savingsInput = card.querySelector('#userSavings');

                    budgetInput.addEventListener('blur', function () {
                        saveGoalCard(card, id);
                    });
                    savingsInput.addEventListener('blur', function () {
                        saveGoalCard(card, id);
                    });

                    return card;
                }

                function saveGoalCard(card, id) {
                    var date = new Date().toISOString().split('T')[0];
                    const cardData = {
                        id: id,
                        budget: card.querySelector('#userBudget').value,
                        savings: card.querySelector('#userSavings').value,
                        date: date
                    };
                    localStorage.setItem(`goalCard_${id}`, JSON.stringify(cardData));
                }

                function deleteExpenseCard(id) {
                    var card = document.getElementById(`expenseCard_${id}`);
                    if (card) {
                        card.remove();
                        localStorage.removeItem(`expenseCard_${id}`);
                    }
                }

                function deleteGoalCard(id) {
                    var card = document.getElementById(`goalCard_${id}`);
                    if (card) {
                        card.remove();
                        localStorage.removeItem(`goalCard_${id}`);
                    }
                }
                function loadExpenses() {
                    var expenseContainer = document.getElementById('expensesContainer');
                    if (localStorage.length === 0) {
                        var noCardsMsg = document.createElement('p');
                        noCardsMsg.id = 'no-cards-msg';
                        noCardsMsg.textContent = 'No cards are present. To add an expense, click on the add icon.';
                        expenseContainer.appendChild(noCardsMsg);
                    } else {
                        for (let i = 0; i < localStorage.length; i++) {
                            const key = localStorage.key(i);
                            if (key.startsWith('expenseCard_')) {
                                const storedCardData = JSON.parse(localStorage.getItem(key));
                                const card = createExpenseCard(storedCardData);
                                expenseContainer.appendChild(card);
                            }
                        }
                    }
                }

                function loadGoals() {
                    var goalContainer = document.getElementById('goal-items');
                    var hasGoals = false;

                    for (let i = 0; i < localStorage.length; i++) {
                        const key = localStorage.key(i);
                        if (key.startsWith('goalCard_')) {
                            const storedCardData = JSON.parse(localStorage.getItem(key));
                            const card = createGoalCard(storedCardData);
                            goalContainer.appendChild(card);
                            hasGoals = true;
                        }
                    }

                    if (!hasGoals) {
                        var nogoalCardsMsg = document.createElement('p');
            nogoalCardsMsg.id = 'no-goal-cards-msg';
            nogoalCardsMsg.innerHTML = `“If you’re saving, you’re succeeding.” - Steve Burkholder.<br>Click on the '+' icon to open the door to a better future.`;
            goalContainer.appendChild(nogoalCardsMsg);
                    }
                }
    loadExpenses();
    loadGoals();
    let subMenu = document.getElementById('subMenu');

function toggleMenu() {
    subMenu.classList.toggle('open-menu');
}

const profileLink = document.getElementById('profileLink');
    const profileImageInput = document.getElementById('profileImage');
    const avatarImage = document.getElementById('avatar');
    const mainavatarImage = document.getElementById('mainAvatar');

    profileLink.addEventListener('click', (event) => {
        event.preventDefault(); // Prevent the link from navigating
        profileImageInput.click(); // Trigger the hidden file input
    });

    profileImageInput.addEventListener('change', (event) => {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                mainavatarImage.src = avatarImage.src = e.target.result;
                localStorage.setItem('imgData', e.target.result); // Save image data
            };
            reader.readAsDataURL(file);
        }
    });

    // Load stored image data on page load
    const storedImgData = localStorage.getItem('imgData');
    if (storedImgData) {
        mainavatarImage.src = avatarImage.src = storedImgData;
    }    

    const darkModeToggle = document.querySelector('.dark-mode');
const root = document.documentElement;

darkModeToggle.addEventListener('click', () => {
    if (root.classList.contains('dark-mode-variables')) {
        root.classList.remove('dark-mode-variables');
    } else {
        root.classList.add('dark-mode-variables');
    }

    // Toggle active state for the dark mode switch
    const spans = darkModeToggle.querySelectorAll('span');
    spans.forEach(span => span.classList.toggle('active'));
});








            </script>
        </main>
    </div>
</body>

