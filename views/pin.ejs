<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>Pin</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-image: url(/styles/pexels-shvetsa-4482900.jpg);
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      background-attachment: fixed;
      background-position: center;
    }

    .container{
      position: relative;
      top: 30%;
    }

    .input-group-text {
      font-size: 20px;
    }

    .pin-boxes input[type='password'] {
      width: 40px;
      height: 40px;
      border: 1px solid #333;
      text-align: center;
      margin-right: 5px;
      line-height: 40px;
    }

    .pin-boxes input[type='password']:focus {
      outline: none;
      border-color: #80bdff;
    }
    .email-input {
      max-width: 300px;
      margin: 20px auto;
    }

    .btn-links {
      margin-top: 10px;
      text-align: center;
    }

    .btn-links a {
      margin-right: 10px;
      display: flex;
      flex-direction: column;
    }
    .hide{
      color: #036df7;
    }
    #emailHelp{
      color: #ffffff;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
      font-weight: 700;
      font-size: 20px;
      text-align: center;
    }
    label{
      color: #ffffff;
      font-weight: 700;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
      position: relative;
      left: 18%;
    }
  </style>
</head>

<body>
  <div class="container text-center mt-4">
    <span class="input-group-text mx-auto d-inline-block">SET PIN</span>
  </div>

  <form action="/pin" method="POST" class="email-input">
    <div class="mb-3">
      <label for="email" class="form-label">Enter email address to verify</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
      <div id="emailHelp" class="form-text">You'll never share your PIN with anyone else.</div>
    </div>

    <div class="pin-boxes d-flex justify-content-center mb-3">
      <input type="password" name="pin1" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" autofocus
        autocomplete="off" />
      <input type="password" name="pin2" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
      <input type="password" name="pin3" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
      <input type="password" name="pin4" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
      <input type="password" name="pin5" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
      <input type="password" name="pin6" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
    </div>

    <button type="submit" class="btn btn-primary d-block mx-auto">Generate New MPIN</button>
    <div class="btn-links">
      <a class="hide" href="/enter_pin">Already have PIN?</a>
      <a class="hide" href="/balance">Want to Deposit Money?</a>
    </div>
  </form>

  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      const inputs = document.querySelectorAll('.pin-boxes input[type="password"]');

      inputs.forEach((input, index) => {
        input.addEventListener('keyup', (e) => {
          if (e.key === "Backspace" && index > 0) {
            inputs[index - 1].focus();
          } else if (input.value.length === 1 && index < inputs.length - 1) {
            inputs[index + 1].focus();
          }
        });
      });
    });
  </script>
</body>

</html>
